{
  "name": "cline/chaperone",
  "description": "Supervisor and guardian for long-running Laravel queue jobs with health monitoring and intelligent recovery",
  "license": "MIT",
  "keywords": [
    "php",
    "laravel",
    "queue",
    "jobs",
    "monitoring",
    "supervisor",
    "health-check",
    "circuit-breaker"
  ],
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "cline/variable-keys": "^1.1"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.48.2",
    "laravel/pulse": "^1.4.4",
    "laravel/telescope": "^5.15.1",
    "orchestra/testbench": "^10.8",
    "pestphp/pest": "^4.1.6",
    "pestphp/pest-plugin-drift": "^4.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "symfony/var-dumper": "^7.4.0",
    "cline/coding-standard": "^1.5.7"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\Chaperone\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": "ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "pest --parallel --min=80 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=80 --coverage"
  }
}
